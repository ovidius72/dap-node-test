{
  "typescript.tsdk": "node_modules/typescript/lib",
  "search.exclude": {
    "**/node_modules": true,
    "node_modules": true,
    "build": true,
    "coverage": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {"language": "typescript", "autoFix": false},
    {"language": "typescriptreact", "autoFix": false}
  ],
  "spellright.language": [
    "en",
    "it"
  ],
  "spellright.documentTypes": [
    "markdown",
    "latex",
    "plaintext"
  ]
}
